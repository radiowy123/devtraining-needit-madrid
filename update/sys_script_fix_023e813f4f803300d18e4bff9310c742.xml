        <name>Count incidents</name>
        <record_for_rollback>false</record_for_rollback>
        <run_once>true</run_once>
        <script><![CDATA[var agg = new GlideAggregate('incident');
agg.addAggregate('COUNT');
agg.query();
if (agg.next()){
	var no = agg.getAggregate('COUNT');
	gs.addInfoMessage('Number of rows: ' + no);
	gs.info('number of incidents; ' + no);
}
var a = new GlideRecord('sc_request');
a.query();
var rowCount = a.getRowCount();
gs.addInfoMessage('rowcount : ' + rowCount);
gs.info('number of requests; ' + rowCount);]]></script>
